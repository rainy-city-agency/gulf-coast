{%- if section.settings.image != blank -%}
<div class="page-banner">
    <img
    data-sizes="auto"
    src="{{ section.settings.image | img_url: 'small'}}"
    data-srcset="
      {{ section.settings.image | img_url: '768x' }} 567w,
      {{ section.settings.image | img_url: '992x' }} 768w,
      {{ section.settings.image | img_url: '1200x' }} 992w,
      {{ section.settings.image | img_url: '1920x' }} 1200w,
      {{ section.settings.image | img_url: '2560x' }} 1920w{% if section.settings.ratina_image != blank %},
      {{ section.settings.ratina_image | img_url: '3840x' }} 1921w,
      {{ section.settings.ratina_image | img_url: '5120x' }} 2560w{% endif%}
      "
    class="lazyload mw-100 img-wrapper d-none d-sm-block" alt="{{ page.title | escape }}" />

    {%- if section.settings.image_mobile != blank -%}
    <img
        data-sizes="auto"
        src="{{ section.settings.image_mobile | img_url: 'pico'}}"
        data-src="{{ section.settings.image_mobile | img_url: '575x' }}"
        class="mw-100 img-wrapper lazyload d-sm-none" alt="{{ page.title | escape }}" />
    {%- else -%}
    <img
        data-sizes="auto"
        src="{{ section.settings.image | img_url: 'pico'}}"
        data-src="
        {{ section.settings.image | img_url: '575x' }}
        "
        class="lazyload mw-100 img-wrapper d-sm-none" alt="{{ page.title | escape }}" />
    {%- endif -%}
</div>
{%- endif -%}

<div class="pt-7 pt-md-10">
    <div class="container">
        <div class="row">
            {%- if section.settings.customer_enable or section.settings.feedback_enable -%}
            <div class="col-sm-10 mx-auto col-md-4 pr-xl-9 order-2 order-md-1">
                {%- if section.settings.customer_enable -%}
                <a href="{%- if section.settings.customer_url != blank -%}{{section.settings.customer_url}}{%- else -%}#{%- endif -%}" class="bg-primary d-block px-4 py-5 py-md-6 text-center text-white mb-5">
                    <h3 class="font-weight-bold text-uppercase letter-spacing mb-md-4">{{- section.settings.customer_heading -}}</h3>
                    <span>{{- section.settings.customer_caption -}}</span>
                </a>
                {%- endif -%}
                {%- if section.settings.feedback_enable -%}
                <a href="{%- if section.settings.feedback_url != blank -%}{{section.settings.feedback_url}}{%- else -%}#{%- endif -%}" class="border cursor-pointer border-2 border-primary d-block px-4 py-5 py-md-6 rounded text-center">
                    <h3 class="font-weight-semibold text-uppercase letter-spacing-1 text-primary">{{- section.settings.feedback_heading -}}</h3>
                    <p class="mb-0 text-primary">{{- section.settings.feedback_caption -}}</p>
                </a>
                {%- endif -%}
            </div>
            {%- endif -%}

            <div class="col-md-8 pl-lg-7 order-1 order-md-2">
                <h1 class="font-weight-bold letter-spacing text-uppercase text-primary mb-3 mb-md-8">FREE CATALOG</h1>
                <div>{{page.content}}</div>
                {% if section.blocks.size > 0 %}
                <div class="row">
                    {% for block in section.blocks %}
                        {% if block.settings.enable and block.settings.choose_img != blank %}
                        <div class="col-md-6 mb-md-0 mb-3">
                            <a href="{%- if block.settings.choose_url != blank -%}{{block.settings.choose_url}}{%- else -%}#{%- endif -%}" {%- if block.settings.choose_url != blank and block.settings.choose_url contains '.pdf'  -%}target="_blank"{% endif %} class="about-feature-item d-block text-center text-white py-10 position-relative h-100 px-4" 
                            style="background-image: url({{ block.settings.choose_img | img_url: 'large' }});">
                            <div class="position-relative zindex-sticky">
                                <h3 class="font-weight-bold text-uppercase">{{ block.settings.title }}</h3>
                                <p>{{ block.settings.caption }}</p>
                            </div>
                            </a>
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
                {% endif %}
            </div>

        </div>
    </div>
</div>

{%- if section.settings.enable_form -%}
<div class="mt-10">
    <div class="container">
        <h5>{{section.settings.catalog_heading}}</h5>
        {% if section.settings.catalog_description != '' %}<p>{{section.settings.catalog_description}}</p>{% endif %}

        <div class="repair-form">
            <div style="margin:0 auto;" class="pxFormGenerator" id="xjzT_xVh3vEMTe_jNMofVA"></div>
            <div class="form-footer d-none d-ex-lg-block">
                <span class="line"></span>
                <span class="plan-img"><img src="//cdn.shopify.com/s/files/1/0541/8313/3361/files/plane-icon-red.png" style="max-width: 42px;"></span>
            </div>
        </div>
    </div>
</div>
{%- endif -%}



{% schema %}
    {
        "name": "Free Catalog",
        "settings": [
            {
                "type": "header",
                "content": "Banner Content"
            },
            {
                "type": "image_picker",
                "id": "ratina_image",
                "label": "Select Image for Large Desktop"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Select Image for Desktop"
            },
            {
                "type": "image_picker",
                "id": "image_mobile",
                "label": "Select Image for Mobile"
            },
            {
                "type": "header",
                "content": "Customer Support"
            },
            {
                "type": "checkbox",
                "id": "customer_enable",
                "label": "Enable"
            },
            {
                "type": "text",
                "id": "customer_heading",
                "label": "Heading Text",
                "default": "Customer Support"
            },
            {
                "type": "textarea",
                "id": "customer_caption",
                "label": "Caption",
                "default": "Have specific questions about your order?"
            },
            {
                "type": "url",
                "id": "customer_url",
                "label": "Choose URL"
            },
            {
                "type": "header",
                "content": "Feedback"
            },
            {
                "type": "checkbox",
                "id": "feedback_enable",
                "label": "Enable"
            },
            {
                "type": "text",
                "id": "feedback_heading",
                "label": "Heading Text",
                "default": "Feedback"
            },
            {
                "type": "textarea",
                "id": "feedback_caption",
                "label": "Caption",
                "default": "Give us a review of our services"
            },
            {
                "type": "url",
                "id": "feedback_url",
                "label": "Choose URL"
            },
            {
                "type": "checkbox",
                "id": "enable_form",
                "label": "Enable Form",
                "default": true
            },
            {
                "type": "text",
                "id": "catalog_heading",
                "label": "Catalog Title"
            },
            {
                "type": "textarea",
                "id": "catalog_description",
                "label": "Catalog description"
            }
        ],
        "blocks": [{
            "type": "content",
            "name": "Content Card",
            "limit": 2,
            "settings": [
                {
                    "type": "checkbox",
                    "id": "enable",
                    "label": "Enable",
                    "default": true
                },
                {
                    "type": "image_picker",
                    "id": "choose_img",
                    "label": "Choose Image"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "textarea",
                    "id": "caption",
                    "label": "Caption"
                },
                {
                    "type": "url",
                    "id": "choose_url",
                    "label": "Choose URL"
                }
            ]
        }]
    }
{% endschema %}
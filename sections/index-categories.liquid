{%- if section.settings.enable_section -%}
<section class="section-content categories pb-0" data-section-id="{{ section.id }}">
    <div class="row no-gutters">
        <div class="col-md-6">
            <div class="row no-gutters">
                {%- if section.settings.choose_img1 != blank -%}
                <div class="col-lg-3 col-sm-6 category-content left-side">
                    <a href="{%- if section.settings.choose_url1 != blank -%}{{- section.settings.choose_url1 -}}{%- else -%}#{%- endif -%}">
                    <div class="category-overlay narrow">
                        <img data-sizes="auto"
                        class="category-image lazyload" src="{{section.settings.choose_img1 | img_url: 'pico' }}"
                        data-srcset="
                            {{ section.settings.choose_img1 | img_url: '350x' }} 300w
                            "
                        alt="{{ section.settings.title1 | escape }}">
                    </div>
                    <div class="category-title d-flex align-items-center">
                        {%- if section.settings.icon1 != '' -%}
                        <img class="ads-b" style="display: block !important;" src="{{section.settings.icon1}}" alt="{{ section.settings.title1 | escape }}">
                        {%- endif -%}
                        {%- if section.settings.title1 != '' -%}
                        <h5 class="mb-0 text-white">{{- section.settings.title1 -}}</h5>
                        {%- endif -%}
                    </div>
                    </a>
                </div>
                {%- endif -%}
                {%- if section.settings.choose_img2 != blank -%}
                <div class="col-lg-9 col-sm-6 category-content">
                    <a href="{%- if section.settings.choose_url2 != blank -%}{{- section.settings.choose_url2 -}}{%- else -%}#{%- endif -%}">
                    <div class="category-overlay wide adjusted">
                        <img data-sizes="auto"
                        class="category-image lazyload" src="{{section.settings.choose_img2 | img_url: 'pico' }}"
                        data-srcset="
                            {{ section.settings.choose_img2 | img_url: '400x' }} 320w,
                            {{ section.settings.choose_img2 | img_url: '850x' }} 768w
                            "
                        alt="{{ section.settings.title2 | escape }}">
                    </div>
                    <div class="category-title d-flex align-items-center">
                        {%- if section.settings.icon2 != '' -%}
                        <img class="instruments" src="{{section.settings.icon2}}"  alt="{{ section.settings.title2 | escape }}"> 
                        {%- endif -%}
                        {%- if section.settings.title2 != '' -%}
                        <h5 class="mb-0 text-white">{{- section.settings.title2 -}}</h5>
                        {%- endif -%}
                    </div>
                    </a>
                </div>
                {%- endif -%}
            </div>
            <div class="row no-gutters">
                {%- if section.settings.choose_img3 != blank -%}

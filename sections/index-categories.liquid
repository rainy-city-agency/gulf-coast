                          <div class="category-title d-flex align-items-center">
                            {%- if section.settings.icon8 != '' -%}
                            <img class="pilot-supplies" src="{{section.settings.icon8}}"  alt="{{ section.settings.title8 | escape }}">
                            {%- endif -%}
                            {%- if section.settings.title8 != '' -%}
                                <h5 class="mb-0 text-white">{{- section.settings.title8 -}}</h5>
                            {%- endif -%}
                          </div>
                       </a>
                    </div>
                    {%- endif -%}
                 </div>
              </div>
           </div>
        </div>
     </div>
</section>
{%- endif -%}


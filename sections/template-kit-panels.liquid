        {
            "type": "image_picker",
            "id": "image",
            "label": "Select Image for Desktop"
        },
        {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Select Image for Mobile"
        },
        {
            "type": "header",
            "content": "Contact Us"
        },
        {
            "type": "checkbox",
            "id": "contact_enable",
            "label": "Enable"
        },
        {
            "type": "text",
            "id": "contact_heading",
            "label": "Heading Text",
            "default": "Contact Us"
        },
        {
            "type": "textarea",
            "id": "contact_caption",
            "label": "Caption",
            "default": "Have specific questions about your order?"
        },
        {
            "type": "url",
            "id": "contact_url",
            "label": "Choose URL"
        },
        {
            "type": "header",
            "content": "Call Today"
        },
        {
            "type": "checkbox",
            "id": "call_enable",
            "label": "Enable"
        },
        {
            "type": "image_picker",
            "id": "call_img",
            "label": "Choose Image"
        },
        {
            "type": "text",
            "id": "call_heading",
            "label": "Heading Text",
            "default": "CALL MATT TODAY!"
        },
        {
            "type": "textarea",
            "id": "call_caption",
            "label": "Caption"
        },
        {
            "type": "header",
            "content": "Custom Kit Panels"
        },
        {
            "type": "checkbox",
            "id": "custom_enable",
            "label": "Enable"
        },
        {
            "type": "text",
            "id": "custom_heading",
            "label": "Heading Text",
            "default": "Custom Kit Panels"
        },
        {
            "type": "textarea",
            "id": "custom_caption",
            "label": "Caption"
        },
        {
            "type": "url",
            "id": "custom_url",
            "label": "Choose URL"
        }
    ],
    "blocks": [{
        "type": "content",
        "name": "Information Item",
        "settings": [
            {
                "type": "header",
                "content": "Content"
            },
            {
                "type": "checkbox",
                "id": "enable",
                "label": "Enable",
                "default": true
            },
            {
                "type": "image_picker",
                "id": "choose_img",
                "label": "Choose Image"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "richtext",
                "id": "caption",
                "label": "Caption"
            }
        ]
    }]
  }
{% endschema %}

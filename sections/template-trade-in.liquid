<section class="section-content pt-0">
    {% if section.settings.image != blank %}
    <div class="hero-image small">
            <img
            data-sizes="auto"
            src="{{ section.settings.image | img_url: 'small'}}"
            data-srcset="
                {% if section.settings.image_mobile != blank %}
                    {{ section.settings.image_mobile | img_url: '768x' }} 567w,
                {% endif%}
                {{ section.settings.image | img_url: '992x' }} 768w,
                {{ section.settings.image | img_url: '1200x' }} 992w,
                {{ section.settings.image | img_url: '1920x' }} 1200w,
                {{ section.settings.image | img_url: '2560x' }} 1920w{% if section.settings.ratina_image != blank %},
                {{ section.settings.ratina_image | img_url: '3840x' }} 1921w,
                {{ section.settings.ratina_image | img_url: '5120x' }} 2560w{% endif%}
                "
            class="lazyload img-fluid" alt="{{ page.title | escape }}" />
    </div>
    {% endif %}
    <div class="container px-5 px-md-3">
        <div class="col-md-10 col-12 mx-auto">
            {% if section.settings.heading != blank %}
            <h1 class="trade-page-title text-uppercase font-weight-bold text-center text-danger letter-spacing-2 pt-md-14 pt-8">{{ section.settings.heading }}</h1>
            {% endif %}
            {% if section.settings.subheading != blank %}
            <p class="mb-6 text-center">
                {{ section.settings.subheading }}
            </p>
            {% endif %}
            {% if section.settings.content_image != blank %}
            <div class="col-md-8 mx-auto">
                <img
                data-sizes="auto"
                src="{{ section.settings.content_image | img_url: 'small'}}"
                data-srcset="
                    {{ section.settings.content_image | img_url: '250x' }} 250w,
                    {{ section.settings.content_image | img_url: '570x' }} 570w,
                    {{ section.settings.content_image | img_url: '720x' }} 720w,
                    {{ section.settings.content_image | img_url: '1080x' }} 1080w"
                class="lazyload img-fluid" alt="{{ page.title | escape }}" />
            </div>
            {% endif %}
            {% if section.settings.content1 != blank %}
            <p class="mb-3">
                {{ section.settings.content1 }}
            </p>
            {% endif %}
            {% if section.settings.content2 != blank %}
            <ul class="trade-up-steps list-unstyled">
                {{ section.settings.content2 }}
            </ul>
            {% endif %}
            {% if section.settings.content3 != blank %}
            <p class="mb-3">
                {{ section.settings.content3 }}
            </p>
            {% endif %}
            {% for block in section.blocks %}
            <div class="row{% unless forloop.last %} border-bottom{% endunless %}{% if forloop.first %} mt-md-12 pb-md-9{% else %} mt-md-3 pb-md-7{% endif %}">
                <div class="col-md-5 text-md-center px-0 px-md-3">
                    {% if block.settings.title != blank %}
                    <p class="font-weight-bold pr-6 pr-md-0 mt-3 text-center">{{ block.settings.title }}</p>
                    {% endif %}
                    {% if block.settings.image != blank %}
                    <div class="trade-up-image ">
                        <img
                        src="{{ block.settings.image | img_url: '250x'}}"
                        alt="Trade img" />
                    </div>
                    {% endif %}
                </div>
                <div class="col-md-7 py-5">
                    {% if block.settings.description_heading != blank %}
                    <p class="mb-3 pl-4 pl-md-0">{{ block.settings.description_heading }}</p>
                    {% endif %}
                    {% if block.settings.description != blank %}
                    <ul class="mt-4 mb-2">
                        {{ block.settings.description }}
                    </ul>
                    {% endif %}
                    {% if block.settings.tradein_value != blank %}
                    <p class="font-weight-bold mb-3 pl-5 pl-md-0">Trade-In Value: {{ block.settings.tradein_value }}</p>
                    {% endif %}
                    {% if block.settings.note != blank %}
                    <p class="mb-3">{{ block.settings.note }}</p>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Page Trade-in",
    "settings": [
        {
            "type": "header",
            "content": "Banner Content"
        },
        {
            "type": "image_picker",
            "id": "ratina_image",
            "label": "Select Image for Large Desktop"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Select Image for Desktop"
        },
        {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Select Image for Mobile"
        },
        {
            "type": "header",
            "content": "Page Content"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "Subheading"
        },
        {
            "type": "image_picker",
            "id": "content_image",
            "label": "Image"
        },
        {
            "type": "textarea",
            "id": "content1",
            "label": "content 1"
        },
        {
            "type": "textarea",
            "id": "content2",
            "label": "content 2"
        },
        {
            "type": "textarea",
            "id": "content3",
            "label": "content 3"
        }
    ],
    "blocks": [
        {
            "type": "trade_in",
            "name": "Trade In",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "description_heading",
                    "label": "Description Heading"
                },
                {
                    "type": "textarea",
                    "id": "description",
                    "label": "Description"
                },
                {
                    "type": "text",
                    "id": "tradein_value",
                    "label": "Trade in value"
                },
                {
                    "type": "text",
                    "id": "note",
                    "label": "Note"
                }
            ]
        }
    ]
}
{% endschema %}
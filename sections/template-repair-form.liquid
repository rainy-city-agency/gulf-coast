            },
            {
                "type": "checkbox",
                "id": "feedback_enable",
                "label": "Enable"
            },
            {
                "type": "text",
                "id": "feedback_heading",
                "label": "Heading Text",
                "default": "Feedback"
            },
            {
                "type": "textarea",
                "id": "feedback_caption",
                "label": "Caption",
                "default": "Give us a review of our services"
            },
            {
                "type": "url",
                "id": "feedback_url",
                "label": "Choose URL"

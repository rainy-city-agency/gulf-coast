<section class="account-pages">
  <div class="banner-section">
    <div class="banner-wrapper">
      <img src="https://cdn.shopify.com/s/files/1/0541/8313/3361/files/G3X.jpg?v=1614856462"
          class="img-wrapper img-fluid" />
    </div>
  </div>
</section>

<section data-template="account" class="section-content" v-cloak>
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-md-6 col-lg-5 mx-auto text-center">

        <div id="accountTabs" data-account-tabs>
          <ul class="nav nav-pills justify-content-center" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#register" role="tab">{{ 'customer.register.title' | t }}</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#login" role="tab">{{ 'customer.login.title' | t }}</a>
            </li>
          </ul>
          <div class="tab-content text-left" id="accountTabsContent">
            <div class="tab-pane fade show active" id="register" role="tabpanel">
              <div class="pt-5">{% include 'form-account-register' %}</div>
            </div>
            <div class="tab-pane fade" id="login" role="tabpanel">
              <div class="pt-5">
                {% if reset_success %}
                <div class="alert alert-success">
                  {{ 'customer.recover_password.success' | t }}
                </div>
                {% endif %}

                {% if settings.enable_login %}
                {% include 'form-account-login-helper' %}
                {% else %}
                {% include 'form-account-login' %}
                {% endif %}
                {% include 'form-account-reset' %}
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
